{% extends 'base.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
 
    
      <section id="hero" class="hero d-flex align-items-center">
        <div class="container">
        <div class="row gy-4 d-flex justify-content-between">
            <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h2 data-aos="fade-up">Voyage</h2>
                <p data-aos="fade-up" data-aos-delay="100">
                    {{ trip.title }}
                </p> 
            </div> 

        </div>
        </div>
    </section> 



  <main id="main">



    <section id="service" class="services pt-0">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <span>{{ trip.title }}</span>
          <h2>{{ trip.title }}</h2>

        </div>

        <div class="row gy-4">
            <div class="col-sm-4">
                <img src="/images/trips/{{ trip.photo }}" alt="" class="img-fluid rounded w-100">
            </div>
            <div class="col-sm-8">
                <h1>{{ trip.title }}</h1>

                <h2><span class="badge bg-info text-white me-3">{{ trip.type }}</span> <span class="badge bg-info text-white me-3">{{ trip.tripDaysLong }} jour(s)</span> <span class="badge bg-info text-white me-3">{{ trip.date | date('d/m/Y') }}</span> </h2>
                


                
                <div class="mt-3">
                    {{ trip.content | raw }}
                </div>

                {% if success %}
                    <div class="mt-3 alert alert-success">
                    {{ success }}
                </div>
                {% endif %}

                {% if error %}
                    <div class="mt-3"> 
                     <div class="mt-3 alert alert-danger">
                    {{ error }}
                    </div> 
                </div>

                {% endif %}
                



                <div class="mt-3">
                    <form action="{{ path('send_reservation_for_trip_route',{id:trip.id}) }}" method="post">
                        <button class="btn btn-success">Envoyer une demande de r√©servation</button>
                    </form>
                    
                </div>
            </div>
            
          
         
        </div>

      </div>
    </section><!-- End Services Section -->



  </main>
  

  
{% endblock %}
