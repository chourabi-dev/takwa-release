{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
 
    
      <section id="hero" class="hero d-flex align-items-center">
        <div class="container">
        <div class="row gy-4 d-flex justify-content-between">
            <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h2 data-aos="fade-up">Réservations d'hôtel</h2>
                <p data-aos="fade-up" data-aos-delay="100">
                    Découvrez nos prochains réservations d'hôtel
                </p> 
            </div> 

        </div>
        </div>
    </section> 



  <main id="main">



    <section id="service" class="services pt-0">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <span>Réservations d'hôtel</span>
          <h2>Réservations d'hôtel</h2>

        </div>

        <div class="row justify-content-center gy-4">

            <div class="col-sm-4">
                <img src="/images/rooms/{{ room.roomPhotos[0].photo }}" alt="" class="rounded w-100">
            </div>
            <div class="col-sm-8">
                <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                
                                <div class="d-flex justify-content-between mt-5">
                                    <div>
                                        <h1>{{ room.title }}</h1>
                                    </div>
                                    <div>
                                        <h2><span class="badge bg-success text-white">{{ room.price }}$</span> </h2>
                                    </div>
                                </div>
                                <p class="text-muted">
                                    {{ room.address }}
                                </p>
                                <p>
                                    {{ room.description | raw }}
                                </p>

                                {% if success %}
                                <div class="mt-3 alert alert-success">
                                    {{ success }}
                                </div>
                                {% endif %}
                
                                {% if error %}
                                    <div class="mt-3"> 
                                    <div class="mt-3 alert alert-danger">
                                    {{ error }}
                                    </div> 
                                </div>
                
                                {% endif %}

                                <p>
                                    <form action="{{ path('make_room_resercation',{id:room.id}) }}">
                                        <div class="row">
                                            <div class="col">
                                                <label for="checkin">Check-in</label>
                                                <input type="date" name="checkin" id="checkin" class="form-control">
                                            </div>
                                            <div class="col">
                                                <label for="checkin">Check-out</label>
                                                <input type="date" name="checkout" id="checkin" class="form-control">
                                            </div>
                                            
                                        </div>
                                        <button type="submit" class="btn btn-primary">Reserver maintenant</button>
                                    
                                    </form>
                                </p>
                                
                                
                            </div>
                        </div>
                    </div>
 

            </div>
          
         
        </div>

      </div>
    </section><!-- End Services Section -->



  </main>
  

  
{% endblock %}
