{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
 
    
      <section id="hero" class="hero d-flex align-items-center">
        <div class="container">
        <div class="row gy-4 d-flex justify-content-between">
            <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h2 data-aos="fade-up">Réservations d'hôtel</h2>
                <p data-aos="fade-up" data-aos-delay="100">
                    Découvrez nos prochains réservations d'hôtel
                </p> 
            </div> 

        </div>
        </div>
    </section> 



  <main id="main">



    <section id="service" class="services pt-0">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <span>Réservations d'hôtel</span>
          <h2>Réservations d'hôtel</h2>

        </div>

        <div class="row justify-content-center gy-4">

            <div class="col-sm-8">


                {% for item in rooms %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <img src="/images/rooms/{{ item.roomPhotos[0].photo }}" alt="" class="rounded w-100">
                                <div class="d-flex justify-content-between mt-5">
                                    <div>
                                        <h2>{{ item.title }}</h2>
                                    </div>
                                    <div>
                                        <h2><span class="badge bg-success text-white">{{ item.price }}$</span> </h2>
                                    </div>
                                </div>
                                <p class="text-muted">
                                    {{ item.address }}
                                </p>
                                <p>
                                    <a href="{{ path('room_details_route',{id:item.id}) }}" >plus de détails</a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>
          
         
        </div>

      </div>
    </section><!-- End Services Section -->



  </main>
  

  
{% endblock %}
