{% extends 'base.html.twig' %}

{% block title %}Réservation de bus{% endblock %}

{% block body %}
 
    
      <section id="hero" class="hero d-flex align-items-center">
        <div class="container">
        <div class="row gy-4 d-flex justify-content-between">
            <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h2 data-aos="fade-up">Réservation de bus</h2>
                <p data-aos="fade-up" data-aos-delay="100">
                    Découvrez nos réservation de bus
                </p> 
            </div> 

        </div>
        </div>
    </section> 



  <main id="main">



    <section id="service" class="services pt-0">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <span>Réservation de bus</span>
          <h2>Réservation de bus</h2>

        </div>

        <div class="row gy-4">
            <div class="col-sm-4">
                 
            </div>
            <div class="col-sm-8">
                <h1>Réservation de bus</h1>
                <p class="text-muted">
                    Remplissez le formulaire ci-dessous pour nous contacter et effectuer votre réservation
                </p>

              

                {% if success %}
                    <div class="mt-3 alert alert-success">
                    {{ success }}
                    </div>
                    {% else %}

  <div class="mt-3">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}

                            <div>
                                <button type="submit" class="btn btn-primary">Envoyer la demande</button>
                            </div>
                        {{ form_end(form) }}
                </div>

                {% endif %}
 
                

 
            </div>
            
          
         
        </div>

      </div>
    </section><!-- End Services Section -->



  </main>
  

  
{% endblock %}
